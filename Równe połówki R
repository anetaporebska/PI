
#include <stdio.h>
#include <stdlib.h>

int main()
{
    
    int n=0;
    scanf("%d",&n);
    
    int *tab;
    tab=(int*)malloc(sizeof(tab)*n);
    
    for(int i=0; i<n; i+=1){
        scanf("%d", &tab[i]);
    }
    
    for(int i=1; i<n-1; i+=1){
        int s1=0;
        int s2=0;
        for(int j=i-1; j>=0; j-=1){
            s1+=tab[j];
        }
        for(int j=i+1; j<n; j+=1){
            s2+=tab[j];
        }
        
        if(s1==s2 && s1!=0){
            printf("%d",i);
            break;
        }
        
    }
    free(tab);

    return 0;
}
